<div class="search-box">
    <h1 class="main-search">Search Releases: </h1>
    <form class="main-search" method="GET" action='/search'>
        <input id="text-field" type="text" name="search" placeholder="Search Here">
        <input id="search-button" type="submit" value="Search">
    </form>
</div>


<section class="search-results">
<div class="artist-img-box">
    <img id="artist-img" src=<%= results[0].cover_image %>>
</div>
<p class="artist-name"><%= results[0].title %></p> <br>
    <% for (let i = 1; i < results.length; i++) {%>
    <% console.log(results[i].type)  %>
    <% if (results[i].type == 'master') {%>
    <%let imgLink = results[i].cover_image %>
    <%let jpeg = "jpeg"%>
    <%let jpg = "jpg"%>
    <% if (imgLink.includes(jpeg || jpeg)) {%>
    <div class="results-img-box-main"><img class="result-img" src=<%= imgLink %>></div>
    <div class="main-result-info">
        <p class="title-result"><%= results[i].title %></p> <br>
        <% if (Array.isArray(results[i].label)) {%>
            <p><%= results[i].label[0] %></p> <br>
        <% } else {%>
            <p><%= results[i].label %></p> <br>
        <%}%>
        <p><%= results[i].year %></p> <br>
        <% if (Array.isArray(results[i].style)) {%>
            <p><%= results[i].style[0] %></p> <br>
        <% } else {%>
            <p><%= results[i].style %></p> <br>
        <%}%>
    </div>
    <% } %>
    <form method="POST" action="/search">
        <input hidden type="text" name="artist" value="<%= results[i].title %>">
        <input hidden type="text" name="genre" value="<%= results[i].style %>">
        <input hidden type="text" name="year" value="<%= results[i].year %>">
        <input hidden type="text" name="label" value="<%= results[i].label %>">
        <input hidden type="text" name="title" value="<%= results[i].title %>">
        <input hidden type="text" name="imgUrl" value="<%= results[i].cover_image %>">
        <button class="btn-main" type="submit">Add to Your Collection</button>
    </form>
    <% } %>
    <%}%>
</section>

