<%})%>
</section>

<h1 class="page-name">NEW MESSAGE:</h1>

<form id="send-msg-form"method="POST" action="/messages">
    <p>Send to:</p>
    <select name='user'>
    <% users.forEach(function(user) { %>
        <option value="<%= user.id %>"><%=user.name%></option>
    <%})%>
    </select> <br>
    <textarea id="msg-body" name="message" rows="4" cols="50"placeholder="Write your message here..."></textarea> <br>
    <input id="send-msg"class="btn" type="submit" value="Send Yr Message!">
</form>




