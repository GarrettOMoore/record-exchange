<h1 class="page-name">MESSAGES:</h1>
<section class="inbox-main">
<% messages.forEach(function(message) {%>
<% let sender = users.find(function(user) {%>
    <%if (user.id === message.sendUserId) {%>
    <% return user.name %>
    <%}%>
<% }) %>
<%console.log(sender)%>
<%console.log(message.sendUserId)%>
<%if (sender.id === message.sendUserId) {%>
    <%console.log("MAAAAATCH")%>
    <%}%>
<p>Sent From: <span class="message-sender"><%= sender.name %></span></p>
